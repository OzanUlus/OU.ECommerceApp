@model CreateOrderAddressDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <form asp-controller="Order" asp-action="Index" method="post">

            <div class="row">
                <div class="col-lg-8">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Teslimat ve Fatura Adresi</span></h5>
                    <div class="bg-light p-30 mb-5">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label>Ad</label>
                                <input class="form-control" asp-for="Name" type="text" placeholder="John">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Soyad</label>
                                <input class="form-control" asp-for="Surname" type="text" placeholder="Doe">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Mail</label>
                                <input class="form-control" asp-for="Email" type="email" placeholder="example@email.com">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Telefon Numarası</label>
                                <input class="form-control" type="text" asp-for="PhoneNumber" placeholder="+90 123 456 789">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Adres 1</label>
                                <input class="form-control" asp-for="Detail1" type="text" placeholder="123 mahalesi">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Adres 2</label>
                                <input class="form-control" asp-for="Detail2" type="text" placeholder="123 sokak">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Ülke</label>
                                <input class="form-control" asp-for="Country" type="text" placeholder="Türkiye">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Şehir</label>
                                <input class="form-control" asp-for="City" type="text" placeholder="New York">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>İlçe</label>
                                <input class="form-control" asp-for="District" type="text" placeholder="New York">
                            </div>
                            <div class="col-md-6 form-group">
                                <label>Posto Kodu</label>
                                <input class="form-control" asp-for="ZipCode" type="text" placeholder="123">
                            </div>

                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>
                    @await Component.InvokeAsync("_OrderSummaryComponentPartia")

                    @await Component.InvokeAsync("_OrderPaymentComponentPartial")


                </div>

            </div>
           


        </form>
    </div>
</div>

