@model List<ResultSpecialOfferDto>
<div class="col-lg-4">
    @foreach (var offer in Model)
    {
        <div class="product-offer mb-30" style="height: 200px;">
            <img class="img-fluid" src="@offer.ImageUrl" alt="">
            <div class="offer-text">
                <h6 class="text-white text-uppercase">@offer.Title</h6>
                <h3 class="text-white mb-3">@offer.Subtitle</h3>
                <a href="" class="btn btn-primary">Alışverişe Başla</a>
            </div>
        </div>
    }


</div>
