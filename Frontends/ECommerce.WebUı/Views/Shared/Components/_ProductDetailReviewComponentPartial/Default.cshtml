@model List<ResultCommentDto>
<div class="tab-pane fade" id="tab-pane-3">
    <div class="row">
        <div class="col-md-6">
            <h4 class="mb-4">@Model.Count yorum bulanmaktadır</h4>
            @foreach (var comment in Model)
            {
                <div class="media mb-4">
                    <img src="@comment.ImageUrl" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                    <div class="media-body">
                        <h6>@comment.NameSurname<small> - <i>@comment.CreatedDate.ToShortDateString()</i></small></h6>
                      
                        @if (comment.Rating == 1)
                        {
                            <div class="text-primary mb-2">
                                <i class="fas fa-star"></i>

                            </div>
                        }
                        @if (comment.Rating == 2)
                        {
                            <div class="text-primary mb-2">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                             
                            </div>
                        }
                        @if (comment.Rating == 3)
                        {
                            <div class="text-primary mb-2">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                           
                            </div>
                        }
                        @if (comment.Rating == 4)
                        {
                            <div class="text-primary mb-2">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                              
                            </div>
                        }
                        @if (comment.Rating == 5)
                        {
                            <div class="text-primary mb-2">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                              
                            </div>
                        }
                        <p>@comment.CommentDetail</p>
                    </div>
                </div>
            }

        </div>
        <div class="col-md-6">
            <h4 class="mb-4">Değerlendirme</h4>
            <small>Emailiniz paylaşılmayacaktır. İşaretli alanları doldurunuz *</small>
            <div class="d-flex my-3">
                <p class="mb-0 mr-2">Puanınız * :</p>
                <div class="text-primary">
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                </div>
            </div>
            <form>
                <div class="form-group">
                    <label for="message">Görüşünüz *</label>
                    <textarea id="message" cols="30" rows="5" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label for="name">Adınız *</label>
                    <input type="text" class="form-control" id="name">
                </div>
                <div class="form-group">
                    <label for="email">Mail Adresiniz *</label>
                    <input type="email" class="form-control" id="email">
                </div>
                <div class="form-group mb-0">
                    <input type="submit" value="Leave Your Review" class="btn btn-primary px-3">
                </div>
            </form>
        </div>
    </div>
</div>
