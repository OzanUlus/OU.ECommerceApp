
<div class="col-lg-4">
    <form class="mb-30" asp-controller="Discount" asp-action="ConfirmDiscountCoupon" method="post">
        <div class="input-group">
            <input type="text" name="code" value="@ViewBag.Code" class="form-control border-0 p-4" placeholder="Kupon Kod">
            <div class="input-group-append">
                <button class="btn btn-primary">Kupon Uygula</button>
            </div>
        </div>
        <br />
      

    </form>
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sepet Tutarı</span></h5>
    <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
            <div class="d-flex justify-content-between mb-3">
                <h6>Ara Toplam</h6>
                <h6>@ViewBag.total ₺</h6>
            </div>
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">KDV</h6>
                <h6 class="font-weight-medium"> @ViewBag.tax ₺ </h6>
            </div>
            <div class="pt-2">
                <div class="d-flex justify-content-between mt-2">
                    <h5>Toplam</h5>
                    <h5>@ViewBag.totalPriceWithTax</h5>
                </div>
            </div>
            <hr />
            <div class="pt-2">
                <div class="d-flex justify-content-between mt-2">
                    <h5>İndirim Tutarı </h5>
                    <h5>@ViewBag.discountPrice ₺</h5>
                </div>
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>Ödenecek Tutar</h5>
                        <h5>@ViewBag.lastTotal ₺</h5>
                    </div>
                    <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Siparişi Tamamla</button>
                </div>
            </div>
        </div>
    </div>
</div>