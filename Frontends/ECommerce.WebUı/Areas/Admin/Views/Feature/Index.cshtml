@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">


        <div class="col-md-12">
            <div class="chart-box">
                <h4>Özellikler Listesi</h4>
                <p>Özellikler ile ilgili işlemrinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz. </p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <
                                <th>Özellikler Adı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var feature in Model)
                            {
                                
                                <tr>
                                   
                                    <td>@feature.Title</td>
                                    <td><a asp-area="Admin" asp-controller="Feature" asp-action="DeleteFeature" asp-route-id="@feature.FeatureId" class="btn btn-danger">Sil</a></td>
                                    <td><a asp-area="Admin" asp-controller="Feature" asp-action="UpdateFeature" asp-route-id="@feature.FeatureId" class="btn btn-warning">Güncelle</a></td>

                                </tr>
                            }


                        </tbody>
                    </table>
                    <td><a  asp-area="Admin" asp-controller="Feature" asp-action="CreateFeature" class="btn btn-primary">Yeni Özellikler Ekle</a></td>
                </div>
            </div>
        </div>

    </div>
</section>

