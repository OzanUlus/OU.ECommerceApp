@model UpdateCargoCompantDto
@{
    ViewData["Title"] = "UpdateCargoCompany";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yeni Kargo Firması Ekleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" asp-for="CargoCompanyId" />
                        <label>Firma Adı</label>
                        <input type="text" class="form-control" asp-for="CargoCompanyName" />
                        <br />
                        <button class="btn btn-warning">Kargo Firması Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

