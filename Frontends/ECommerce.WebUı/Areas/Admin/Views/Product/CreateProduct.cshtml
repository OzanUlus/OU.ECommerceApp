@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Ekleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post" asp-controller="Product" asp-action="CreateProduct" asp-area="Admin">
                        <label>Ürün Adı</label>
                        <input type="text" class="form-control" asp-for="ProductName" />
                        <br />
                        <label>Ürün Fiyatı</label>
                        <input type="number" class="form-control" asp-for="ProductPrice" />
                        <br />
                        <label>Ürün Url</label>
                        <input type="text" class="form-control" asp-for="ProductImageUrl" />
                        <br />
                        <label>Ürün Açıklaması</label>
                        <textarea rows="5" class="form-control" asp-for="ProductDescription"></textarea>
                        <br />
                        <label>Ürün Kategorisi</label>
                        @Html.DropDownListFor(c => c.CategoryId, (List<SelectListItem>)ViewBag.CategoryValues, new { @class = "form-control" })
                        <br />
                        <button class="btn btn-primary">Ürün Ekle</button>


                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

