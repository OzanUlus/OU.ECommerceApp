@model List<ResultFeatureSliderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">


        <div class="col-md-12">
            <div class="chart-box">
                <h4>Öne Çıkan Görsel Listesi</h4>
                <p>Öne Çıkan Görsel ile ilgili işlemrinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz. </p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>Görsel Url</th>
                                <th>Status</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var fs in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@fs.Title</td>
                                    <td>@fs.Description</td>
                                    <td>@fs.ImageUrl</td>
                                    <td>@fs.Status</td>
                                    <td><a asp-area="Admin" asp-controller="FeatureSlider" asp-action="DeleteFeatureSlider" asp-route-id="@fs.FeatureSliderId" class="btn btn-danger">Sil</a></td>
                                    <td><a  asp-area="Admin" asp-controller="FeatureSlider" asp-action="UpdateFeatureSlider" asp-route-id="@fs.FeatureSliderId" class="btn btn-warning">Güncelle</a></td>

                                </tr>
                            }


                        </tbody>
                    </table>
                    <td><a asp-area="Admin" asp-controller="FeatureSlider" asp-action="CreateFeatureSlider" class="btn btn-primary">Yeni Öne Çıkan Görsel Ekle</a></td>
                </div>
            </div>
        </div>

    </div>
</section>

