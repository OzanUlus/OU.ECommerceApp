@model List<ECommerceApp.DtoLayer.OrderDtos.OrderingDtos.ResultOrderingByUserIdDto>
@{
    ViewData["Title"] = "MyOrderList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
    string trColor = "";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sipariş Geçmişi</h4>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Toplam Fiyat</th>
                                        <th>Sipariş Tarihi</th>
                                        <th>Sipariş Detayları</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count ++;
                                        if(count == 1) { trColor = "table-info"; }
                                        if(count == 2) { trColor = "table-warning"; }
                                        if(count == 3) { trColor = "table-danger"; }
                                        if(count == 4) { trColor = "table-success"; }
                                        if(count == 5) { trColor = "table-primary"; }
                                        if(count == 6) { trColor = "table-secondary"; }
                                        if(count == 7) { trColor = "table-dark"; }
                                        <tr class="@trColor">
                                            <td>@count</td>
                                            <td>@item.TotalPrice</td>
                                            <td>@item.OrderDate.ToShortDateString()</td>
                                            <td><a href="#" class="btn btn-outline-info" >Sipariş Detayları</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
          
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    
    <!-- partial -->
</div>

